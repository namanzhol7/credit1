import java.util.Scanner;
public class Main {
    public static void main(String[] args){
        Scanner s = new Scanner(System.in);

        System.out.println("Doxod: ");
        int doxod = s.nextInt();

        System.out.println("Rasxodi: ");
        int ezhRasxod = s.nextInt();

        System.out.println("Summa credita: ");
        int summaCredita = s.nextInt();

        System.out.println("Srok credita: ");
        int srok = s.nextInt();

        double polovinaCredita = summaCredita * 0.5;

        if (doxod > polovinaCredita){
            System.out.println("Credit odobren");
        }
        else{
            System.out.println("V credite otkazano");
        }
        
        s.close();
    }
}
